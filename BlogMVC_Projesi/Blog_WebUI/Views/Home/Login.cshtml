@using Entities.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Giriş Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/login-register.css" rel="stylesheet" />
<script src="~/js/bootstrap.min.js"></script>
<script src="~/js/jquery.js"></script>


<body>
    @using (Html.BeginForm())
    {


    <div class="container">
        <div class="row">
            <div class="col-md-offset-3">
                <div id="first">
                    <div class="myform form ">
                        <div class="logo mb-3">
                            <div class="col-md-12 text-center">
                                <h1>GİRİŞ FORMU</h1>
                            </div>
                        </div>
                        @Html.ValidationSummary(false)
                            <div class="form-group">
                                @Html.LabelFor(model=> model.UserName)
                                @Html.TextBoxFor(model=> model.UserName, new {@class="form-control", placeholder="Kullanıcı Adınızı Giriniz" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password)
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifrenizi Giriniz", type="password" })
                            </div>
                            <div class="form-group">
                                <p class="text-center">By signing up you accept our <a href="#">Terms Of Use</a></p>
                            </div>
                            <div class="col-md-12 text-center ">
                                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">GİRİŞ</button>
                            </div>
                            <BR />
                            <div class="form-group">
                                <p class="text-center">Don't have account? <a href="#" id="signup">Sign up here</a></p>
                            </div>

                    </div>
                </div>
              </div>
        </div>
    </div>
    }
</body>

